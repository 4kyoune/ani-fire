datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  name              String?
  email             String? @unique
  image             String? @default("https://notion-avatar.vercel.app/api/svg/eyJmYWNlIjowLCJub3NlIjoxLCJtb3V0aCI6MTgsImV5ZXMiOjQsImV5ZWJyb3dzIjoyLCJnbGFzc2VzIjo3LCJoYWlyIjoxNSwiYWNjZXNzb3JpZXMiOjAsImRldGFpbHMiOjAsImJlYXJkIjowLCJmbGlwIjoxLCJjb2xvciI6InJnYmEoMjU1LCAwLCAwLCAwKSIsInNoYXBlIjoibm9uZSJ9")
  password          String
  comments          Comments[]
}

model Comments {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  author            User @relation(fields: [authorId], references: [id])
  authorId          String @db.ObjectId
  caption           String
}